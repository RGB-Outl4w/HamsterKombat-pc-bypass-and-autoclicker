{
  "manifest_version": 3,
  "name": "Hamster Kombat Autoclicker",
  "description": "Adds a button to enable automated clicking in a game.",
  "version": "1.0",
  "permissions": [
    "activeTab", 
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html" 
  }
}
